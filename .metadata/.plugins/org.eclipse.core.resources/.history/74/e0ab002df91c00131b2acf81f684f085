package contract;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;

public class DistributedGrepCommand {
	private String key;
	private String value;
	private static final String logfile = "machine.log";
	
	public DistributedGrepCommand(String command){
		String [] commands = command.split(" ");
		for(int i = 1; i<commands.length; i+=2){
			String flag = commands[i];
			String regex = commands[i+1];
			key = null;
			value = null;
			switch(flag){
			case "-v":
				value = regex;
				break;
			case "-k":
				key = regex;
			}
		}		
	}

	public ArrayList<String> executeCommand() throws IOException, InterruptedException{
		Runtime r = Runtime.getRuntime();
		Process p = null;
		if(key==null){
			p = r.exec("grep [:].*"+value+".* "+logfile+" >result");
		}
		else if(value==null){
			p = r.exec("grep .*"+key+".*[:]"+" "+logfile+" >result");
		}
		else{
			p = r.exec("grep .*"+key+".*[:] | "+"grep [:].*"+value+".* "+logfile+" >result");
		}
		//p.waitFor();
		System.out.println("passed");
		BufferedReader b = new BufferedReader(new FileReader("result"));
		ArrayList<String> result = new ArrayList<String>();
		String line = "";
		while((line=b.readLine())!=null){
			result.add(line);
		}
		return result;
	}
	
	public static void main (String[] args) throws IOException, InterruptedException{
		DistributedGrepCommand cmd = new DistributedGrepCommand("grep -v solve");
		ArrayList<String> lis = cmd.executeCommand();
		System.out.println(lis.size());
	}

}
